@{
    Layout = "";
}
<!DOCTYPE html>
<html ng-app="logonApp">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400,600,700,800'
        rel='stylesheet' type='text/css'>
    <link href="@Url.Content("~/Content/reset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/theme.css")" rel="stylesheet" type="text/css" />

    <script src="/Scripts/libs/jquery-2.0.3.min.js" type="text/javascript"></script>
    <script src="/Scripts/libs/angular.min.js" type="text/javascript"></script>
    <script src="/Scripts/libs/underscore.min.js" type="text/javascript"></script>
    <script src="/Scripts/libs/restangular.js" type="text/javascript"></script>
    <script src="/Scripts/libs/ui-bootstrap-0.6.0.min.js" type="text/javascript"></script>
    <script src="/Scripts/libs/ui-bootstrap-tpls-0.6.0.min.js" type="text/javascript"></script>
    <script src="/Scripts/Views/Shared/enums.js" type="text/javascript"></script>
    <script src="/Scripts/Views/Account/logon.js" type="text/javascript"></script>
    
</head>
<body>
    <!-- START: Wrapper DIV -->
    <div class="wrapper">
        <div class="header-cont">
            
            <div class="navs">
                <ul class="mnav">

                    <li><a href="/Account/Register" class="join">Join Now</a></li>
                    <li><a href="/Account/Logon" class="login">Login</a></li>
                </ul>
                <div class="clear">
                </div>
                <ul class="top-nav">
                    <li class="home"><a href="/"></a></li>
                    <li><a href="/home/findbook">Find eBooks</a></li>
                    <li><a href="/home/about">About Us</a></li>
                </ul>
            </div>
        </div>
        
        <div ng-controller="LogonController">
        
        <div class="signin">
            <div>
                <alert ng-repeat="alert in alerts" type="alert.type" close="closeAlert($index)"><h2>{{alert.type | uppercase}}</h2><div class="alert-msg" ng-repeat="msg in alert.msgs">{{msg}}</div></alert>
            </div>

        <form ng-hide="logon.resetPassword">
            <img src="/content/images/signin.png" class="stag" />
            <a href="/account/register" class="signup-ovf"></a>
            <div class="content-md">
                <div class="contents-sd bgsu">
                    <table class="signin-cont" cellpadding="0" cellspacing="0" border="0" >
                        <tr>
                            <td>
                                <label>
                                    Username:</label>
                            </td>
                            <td>
                                <input type="text" name="username" ng-model="logon.userName" />
                            </td>
                        </tr>
                        <tr>
                            <td height="10">
                            </td>
                            <td>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>
                                    Password:</label>
                            </td>
                            <td>
                                <input type="password" name="password" ng-model="logon.password" />
                            </td>
                        </tr>
                        <tr>
                            <td height="20">
                            </td>
                            <td>
                            </td>
                        </tr>
                        <tr>
                            <td>
                            </td>
                            <td>
                                <input name="" type="checkbox" value="" ng-model="logon.rememberMe" /><label style="display: inline; padding-left: 8px;">Remember Me</label>
                            </td>
                        </tr>
                        <tr>
                            <td height="20">
                            </td>
                            <td>
                            </td>
                        </tr>
                        <tr>
                            <td>
                            </td>
                            <td>
                                <a href="#" class="fp float-left" ng-click="logon.resetPassword=true">Forgot Password?</a>
                                <input type="submit" name="submit" value="Sign In" class="green-button br" ng-click="login()" />
                            </td>
                        </tr>
                        <tr>
                            <td height="30">
                            </td>
                            <td>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </form>

        <form ng-show="logon.resetPassword">
        <img src="/content/images/signin.png" class="stag" />
        <a href="/account/register" class="signup-ovf"></a>
        <div class="content-md">
            <div class="contents-sd bgsu">
            <table class="signin-cont" cellpadding="0" cellspacing="0" border="0" style="margin-top: 50px; margin-bottom: 50px">
                <tr>
                    <td>
                        <label>
                            Email:</label>
                    </td>
                    <td>
                        <input type="text" name="email" ng-model="logon.email" style="width: 190px" required />
                        <input type="button" class="btn btn-primary" value="Reset" ng-click="resetPassword()"
                            style="vertical-align: top" />
                    </td>
                </tr>
                <tr>
                <td colspan="2" style="text-align:center; padding-top: 10px">
                    <a href="#" class="fp" ng-click="logon.resetPassword=false">Go back</a></td>
                </tr>
            </table>
            </div>
        </div>
        </form>

        </div>
        </div>
        <div class="clear">
        </div>
        <div class="footer">
            <div class="f-desc">
                
            </div>
            @{ Html.RenderPartial("_NewsLetter"); }
            
            <div class="clear">
            </div>
            <div style="float: right; margin: 40px">
                Copyright &copy; @DateTime.Now.ToString("yyyy") All Rights Reserved.
            </div>
        </div>
    </div>
</body>
</html>
