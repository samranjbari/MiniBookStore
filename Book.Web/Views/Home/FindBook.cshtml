@{
    ViewBag.Title = "Find Book";
}
<div ng-controller="FindBookController">
    <div class="yellow">
        <h3>
            Refine Search</h3>
        <fieldset>
            <dl>
                <dt>
                    <label>
                        By Author:</label></dt>
                <dd>
                    <input type="text" name="byAuthor" ng-model="search.author" />
                </dd>
            </dl>
            <dl>
                <dt>
                    <label>
                        By Popularity:</label></dt>
                <dd>
                    <select name="byPopular" ng-model="search.popular">
                        <option>Most Popular</option>
                        <option>Least Popular</option>
                    </select>
                </dd>
            </dl>
            <div class="clear">
            </div>
            <dl>
                <dt>
                    <input type="submit" name="submit" value="Refine Search" class="green-button br"
                        ng-click="search()" />
                </dt>
            </dl>
        </fieldset>
    </div>

    <div class="content-md" ng-show="books.length>0" ng-repeat="b in books">
        <div class="contents-sd">
            <div class="book-side">
                <img ng-src="{{b.coverUrl}}" width="139" height="171" alt="Book" class="book-img" />
                <div class="clear">
                </div>
            </div>
            <div>
                <p class="book-tl">
                    {{b.title}}</p>
                <p>
                    {{b.description}}</p>
                @*<rating value="details.rating" max="5"></rating>*@
                <div class="reads mr20">
                    {{b.readCount}} Reads</div>
                <div class="press mr20">
                    {{b.author}}
                
                    &nbsp;&nbsp;<a ng-href="{{b.gumroadUrl}}" class="gumroad-button">Read Now!</a>
                    
                </div>
            </div>
            <div class="clear">
            </div>
        </div>
    </div>
</div>

@section Scripts{
<script src="/Scripts/Views/Home/findBook.js" type="text/javascript"></script>
}