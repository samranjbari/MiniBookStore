

<div ng-controller="DetailController">
    <h1>
        {{details.title}}</h1>
    <div class="content-md">
        <div class="contents-sd">
            <div class="book-side">
                <img ng-src="{{details.coverUrl}}" width="139" height="171" alt="Book" class="book-img" />
                @*<rating value="details.rating" max="5"></rating>*@
                <div class="reads mr20">
                    {{details.readCount}} Downloads</div>
                
                <div class="clear">
                </div>

            </div>
            <div class="desc-side">
                <p class="price">
                    <a ng-href="{{details.gumroadUrl}}" class="gumroad-button">Read Now!</a>
                    &nbsp;&nbsp;<a href="#" data-toggle="modal" data-target="#myModal" class="link small">(Having difficulty reading the book?)</a>
                </p>
                <p class="press mr20">
                    Author: <strong>{{details.author}}</strong></p>
                <div class="clear">
                </div>
                <p>
                    {{details.description}}
                </p>
            </div>

            <div class="clear">
            </div>
            
            <span class='st_facebook_large' displaytext='Facebook'></span>
            <span class='st_twitter_large' displaytext='Tweet'></span>
            <span class='st_plusone_large' displaytext='Google +1'></span>
            <span class='st_fblike_large' displaytext='Facebook Like' style="top: -12px; position: relative"></span>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" >
                    &times;</button>
                <h4 class="modal-title" id="myModalLabel">
                    Install PDF Reader on your device</h4>
            </div>
            <div class="modal-body">
                <p>
                    <div class="md pull-left">For iOS</div>
                    <a class="link" target="_blank" href="https://itunes.apple.com/us/app/adobe-reader/id469337564?mt=8">Install for iOS</a>
                    <div class="clear"></div>
                </p>
                <p>
                    <div class="md pull-left">For android</div>                        
                    <a class="link" target="_blank" href="https://play.google.com/store/apps/details?id=com.adobe.reader&hl=en">Install for android</a>
                    <div class="clear">
                    </div>
                </p>
                <p>
                    <div class="md pull-left">All Other</div>
                    <a class="link" target="_blank" href="http://get.adobe.com/reader/">
                        Install for PC</a>
                    <div class="clear">
                    </div>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Close</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

